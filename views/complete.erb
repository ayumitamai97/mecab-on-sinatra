<div class="row">
  <div class="col-sm-6">
    <div class="row mt-3 mb-2">
      <h2 class="col-sm-6">頻出語 <%= "(" + @wordclass + ")" unless @wordclass.nil? %></h2>
      <div class="col-sm-6"><%= link "抽出画面に戻る", "/", class: "btn btn-dark" %></div>
    </div>
    <table class="table-bordered w-100">
      <tr class="table-active">
        <th class="pl-2 pr-2 text-center w-50">形態素 (<%= @wordclass %>)</th>
        <th class="pl-2 pr-2 text-center w-50">数</th>
      </tr>
      <tbody>
        <% @noun_and_count.keys.each do |key| %>
          <tr>
            <td class="pl-2 pr-2 text-center"><%= key %></td>
            <td class="pl-2 pr-2 text-center"><%= @noun_and_count[key] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-sm-6">
    <h2 class="">元テキスト</h2>
    <%= @text %>
  </div>

</div>
