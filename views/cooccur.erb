<div class="row mt-3 mb-2">
  <h2 class="col-sm-6">共起語 <%= "(" + @wordclass + ")" unless @wordclass.nil? %></h2>
  <div class="col-sm-6"><%= link "抽出画面に戻る", "/", class: "btn btn-dark" %></div>
</div>
<table class="table-bordered w-100">
  <tr class="table-active">
    <th class="pl-2 pr-2 text-center w-50">形態素 <%= "(" + @wordclass + ")" unless @wordclass.nil? %></th>
    <th class="pl-2 pr-2 text-center w-50">スコア</th>
  </tr>
  <tbody>
    <% @word_and_logs.keys.each do |key| %>
      <tr>
        <td class="pl-2 pr-2 text-center"><%= key %></td>
        <td class="pl-2 pr-2 text-center"><%= @word_and_logs[key] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
